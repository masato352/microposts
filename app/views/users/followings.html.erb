<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @followings.any? %>
     <h3>Following List (<%= @followings.count %>)</h3>   
      <ol class="followings">
         <%= render 'followings' %>
      </ol>
    <% end %>
  </div>
</div>