<h1>Edit</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

      <%= f.label :profile %>
      <%= f.text_field :profile %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :area %>
      <%= f.area_field :area %>

      <%= f.submit "Edit", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
